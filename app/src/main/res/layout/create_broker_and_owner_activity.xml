<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="brokerscirlce.com.Activities.Projects.CreateProjectActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <LinearLayout
                android:id="@+id/btnclose"
                android:layout_weight="0.15"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_close_black_24dp"
                    android:tint="@color/appbar_actionicon_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="TODO" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.70"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="18sp"
                    android:text="Create Broker and Owner"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.15"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorBlue"
                    android:src="@drawable/ic_user_icon_colored"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:id="@+id/layout"
                android:orientation="horizontal"
                android:layout_width="115dp"
                android:layout_height="115dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorBlue"
                    android:src="@drawable/ic_user_icon_colored"/>

                <ImageView
                    android:id="@+id/online_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circlebackground"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_add"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name:"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/rectangleshape"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="35dp"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:inputType="text"
                        android:textSize="12sp"
                        android:hint="Enter Name" />

                    <ImageView
                        android:id="@+id/drawable_name"
                        android:layout_alignParentEnd="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="5dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorWhite"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address:"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/rectangleshape"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="35dp"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:inputType="textEmailAddress"
                        android:textSize="12sp"
                        android:hint="Enter Email Address"/>

                    <ImageView
                        android:id="@+id/drawable_email"
                        android:layout_alignParentEnd="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="5dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorWhite"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password:"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/rectangleshape"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="35dp"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:inputType="textPassword"
                        android:textSize="12sp"
                        android:hint="Enter Password"/>

                    <ImageView
                        android:id="@+id/drawable_password"
                        android:layout_alignParentEnd="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="5dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorWhite"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Real Estate:"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/rectangleshape"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <Spinner
                        android:id="@+id/estae_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CNIC:"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/et_cnic"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/rectangleshape"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="35dp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:inputType="number"
                    android:textSize="12sp"
                    android:hint="Enter CNIC"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile No:"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/rectangleshape"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="35dp"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:inputType="phone"
                        android:textSize="12sp"
                        android:hint="Enter Mobile No"/>

                    <ImageView
                        android:id="@+id/drawable_mobile"
                        android:layout_alignParentEnd="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="5dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorWhite"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type:"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/rectangleshape"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <Spinner
                        android:id="@+id/type_spinner"
                        android:background="@drawable/spinner_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/create_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/recangle_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Create Account"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

</ScrollView>