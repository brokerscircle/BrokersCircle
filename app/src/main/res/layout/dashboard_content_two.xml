            app:borderWidth="0dp"
            android:src="@drawable/create_icon_colored_two"
            android:tint="@color/colorWhite"
            app:maxImageSize="40dp"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

