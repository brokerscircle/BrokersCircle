<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/gradiant_image_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="brokerscircle.com.Activities.InComing_Call_Activity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:src="@mipmap/ic_logo_foreground" />

    <TextView
        android:id="@+id/yoohoo_calling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Video Calling"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage2"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="1dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/yoohoo_calling"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_user_icon_colored"
        android:layout_marginTop="34dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/remoteUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userImage2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/roboto_bold"
        android:text="User Name"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/callState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remoteUser"
        android:layout_centerHorizontal="true"
        android:text="Rigging"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/callDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/callState"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/answerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/round_green_pickup"
            android:padding="16dp"
            android:tint="@color/colorWhite"
            android:src="@drawable/ic_call_icon_colored" />

        <ImageView
            android:id="@+id/declineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_red_hangup"
            android:padding="16dp"
            android:tint="@color/colorWhite"
            android:src="@drawable/ic_call_end" />
    </LinearLayout>

</RelativeLayout>