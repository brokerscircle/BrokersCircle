<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="brokerscirlce.com.Activities.Get_Direction_Activity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        app:elevation="10dp"
        android:backgroundTint="@color/colorGrey"
        android:gravity="center"
        android:layout_gravity="top"
        android:layout_height="wrap_content"
        android:background="@color/bg_appbar_color">

        <LinearLayout
            android:weightSum="1.0"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/bg_appbar_color"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:divider="@color/colorBlack"
            android:layout_height="40dp">

            <LinearLayout
                android:id="@+id/btn_back"
                android:layout_weight="0.12"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:tint="@color/appbar_actionicon_color"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.60"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Directions"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.08"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.28"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:gravity="end|center"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btn_chat"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:tint="@color/colorBlue"
                    android:src="@drawable/ic_chat_icon"/>

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/btn_profile"
                        android:layout_centerInParent="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="5dp"
                        app:riv_border_width="1dp"
                        app:riv_border_color="@color/colorBlue"
                        android:src="@drawable/ic_user_icon_colored"/>

                    <ImageView
                        android:id="@+id/user_online_icon"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:padding="0dp"
                        android:src="@drawable/greendot_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/layout_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/flMapContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/map"
                    class="brokerscirlce.com.Views.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>