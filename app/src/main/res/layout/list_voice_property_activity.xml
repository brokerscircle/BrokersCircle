<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="brokerscirlce.com.Activities.Properties.ListVoiceProperty">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_gravity="top"
                android:background="@mipmap/create_background"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <View
                    android:background="@color/colorBlueWithOpacity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:weightSum="1.0"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_gravity="top"
                        android:layout_width="match_parent"
                        android:divider="@color/colorBlack"
                        android:layout_height="40dp">

                        <LinearLayout
                            android:id="@+id/btn_back"
                            android:layout_weight="0.15"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/ic_arrow_back_black_24dp"
                                android:tint="@color/colorWhite"
                                android:layout_width="30dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="List voice recording property"
                                android:fontFamily="@font/roboto_regular"
                                android:letterSpacing="0.08"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorWhite"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="0.25"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/btn_chat"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:scaleType="fitCenter"
                                android:tint="@color/colorWhite"
                                android:src="@drawable/ic_chat_icon"/>

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp">

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/btn_profile"
                                    android:layout_centerInParent="true"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:scaleType="fitCenter"
                                    android:tint="@color/colorWhite"
                                    app:riv_corner_radius="5dp"
                                    app:riv_border_width="1dp"
                                    app:riv_border_color="@color/colorWhite"
                                    android:src="@drawable/ic_user_icon_white"/>

                                <ImageView
                                    android:id="@+id/user_online_icon"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="0dp"
                                    android:src="@drawable/greendot_icon"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:background="@color/colorBlack"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp" />

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="List Property by Voice Recording"
                            android:fontFamily="@font/roboto_regular"
                            android:letterSpacing="0.08"
                            android:textSize="18sp"
                            android:textStyle="bold"

                            android:textColor="@color/colorWhite"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="220dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Just tab button to voice recording"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.08"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:background="@drawable/round_blue_border"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="35dp">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabs_property_purpose"
                            android:elevation="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:tabSelectedTextColor="@color/colorWhite"
                            app:tabIndicatorHeight="0dp"
                            android:padding="0dp"
                            app:tabTextAppearance="@style/TextAppearance.AppCompat.Small"
                            android:layout_gravity="center_vertical"
                            app:tabBackground="@drawable/tab_selector_round"
                            app:tabMode="fixed"
                            app:tabGravity="fill">

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/tab_sell"
                                android:text="For Sell"
                                android:layout_margin="5dp"
                                android:background="@drawable/round_blue"
                                android:layout_gravity="center_vertical"
                                android:textSize="10sp"
                                android:fontFamily="@font/roboto_regular"
                                android:buttonTint="@color/colorBlue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/tab_rent"
                                android:text="For Rent"
                                android:textSize="10sp"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:buttonTint="@color/colorBlue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/tab_wanted"
                                android:text="For Wanted"
                                android:layout_margin="5dp"
                                android:textSize="10sp"
                                android:fontFamily="@font/roboto_regular"
                                android:buttonTint="@color/colorBlue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </com.google.android.material.tabs.TabLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp">

                        <EditText
                            android:id="@+id/et_language"
                            android:background="@drawable/round_blue_border"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingEnd="40dp"
                            android:paddingStart="40dp"
                            android:textSize="@dimen/textsizedefault"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Select Language"
                            android:inputType="textPersonName"
                            android:nextFocusForward="@id/et_password" />

                        <ImageView
                            android:layout_width="@dimen/textfieldiconsize"
                            android:layout_height="@dimen/textfieldiconsize"
                            android:tint="@color/colorWhite"
                            android:src="@drawable/ic_language_icon"
                            android:layout_marginStart="3dp"
                            android:background="@drawable/circleblue"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/drawable_name"
                            android:layout_alignParentEnd="true"
                            android:layout_width="@dimen/erroriconsize"
                            android:layout_height="@dimen/erroriconsize"
                            android:layout_marginEnd="8dp"
                            android:tint="@color/colorWhite"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.devlomi.record_view.RecordView
                    android:id="@+id/record_view"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
                    app:slide_to_cancel_arrow_color="@color/colorBlue"
                    app:slide_to_cancel_text="Slide To Cancel"
                    app:counter_time_color="@color/colorBlue" />

                <com.devlomi.record_view.RecordButton
                    android:id="@+id/record_button"
                    android:layout_below="@+id/record_view"
                    android:layout_centerHorizontal="true"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circleblue"
                    android:scaleType="centerInside"
                    android:tint="@color/colorWhite"
                    app:mic_icon="@drawable/ic_audio_icon" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_more_options"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_title"
                            android:background="@drawable/round_blue_border"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:paddingEnd="40dp"
                            android:paddingStart="40dp"
                            android:textSize="@dimen/textsizedefault"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Enter Title"
                            android:inputType="textPersonName"
                            android:nextFocusForward="@id/et_password" />

                        <ImageView
                            android:layout_width="@dimen/textfieldiconsize"
                            android:layout_height="@dimen/textfieldiconsize"
                            android:tint="@color/colorWhite"
                            android:src="@drawable/ic_language_icon"
                            android:layout_marginStart="3dp"
                            android:background="@drawable/circleblue"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/drawable_title"
                            android:layout_alignParentEnd="true"
                            android:layout_width="@dimen/erroriconsize"
                            android:layout_height="@dimen/erroriconsize"
                            android:layout_marginEnd="8dp"
                            android:tint="@color/colorWhite"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_description"
                            android:background="@drawable/rectagle_blue_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:minLines="5"
                            android:textSize="@dimen/textsizedefault"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Enter Description"
                            android:inputType="textMultiLine" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_centerInParent="true"
                            android:background="@color/colorDarkGrey"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"/>

                        <TextView
                            android:background="@color/colorWhite"
                            android:text="Property Types"
                            android:layout_centerVertical="true"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <HorizontalScrollView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:scrollbars="none" >

                        <RadioGroup
                            android:id="@+id/property_types_radio_group"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                        </RadioGroup>

                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:scrollbars="none" >

                        <RadioGroup
                            android:id="@+id/types_child_radio_group"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                        </RadioGroup>

                    </HorizontalScrollView>

