<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="0.9"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/broker_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorBlue"
            android:src="@drawable/ic_user_icon_colored"/>

        <TextView
            android:id="@+id/tv_broker_name"
            android:text="Name"
            android:fontFamily="@font/roboto_regular"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="10sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_estate_name"
            android:text="Estate Name"
            android:fontFamily="@font/roboto_regular"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="9sp"
            android:textColor="@color/colorBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:text="Dealing with"
            android:fontFamily="@font/roboto_regular"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rating"
            android:text="4.5"
            android:fontFamily="@font/roboto_regular"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RatingBar
            android:id="@+id/rating_stars"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/with_broker_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorBlue"
            android:src="@drawable/ic_user_icon_colored"/>

        <TextView
            android:id="@+id/tv_with_broker_name"
            android:text="Name"
            android:fontFamily="@font/roboto_regular"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="10sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_with_estate_name"
            android:text="Estate Name"
            android:fontFamily="@font/roboto_regular"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="9sp"
            android:textColor="@color/colorBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>