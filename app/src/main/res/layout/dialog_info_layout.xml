<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:paddingTop="40dp"
        android:background="@drawable/dialogbackgroundshape"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_name"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Name"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular" />

        <TextView
            android:id="@+id/tv_estatename"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Estate Name"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon_content"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_sms_icon_colored"/>
            <!--layout putting programmatically -->
            <LinearLayout
                android:id="@+id/layoutinfo"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </LinearLayout>
            <!--layout putting programmatically -->
        </LinearLayout>

        <LinearLayout
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/intent_btn"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/dialog_btn_left_background"
                android:backgroundTint="@color/colorLightBlue"
                android:layout_weight="0.5"
                android:layout_marginStart="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Goto"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular" />

            <TextView
                android:id="@+id/decline_btn"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/dialog_btn_right_background"
                android:backgroundTint="@color/colorBlue"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Done"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular" />

        </LinearLayout>



    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorDark"
        android:src="@drawable/ic_user_icon_colored" />

</RelativeLayout>