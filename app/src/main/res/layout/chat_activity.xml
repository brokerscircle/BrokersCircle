<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="brokerscirlce.com.Activities.Brokers.ViewAllBrokersActivity">

    <LinearLayout
        android:weightSum="1.0"
        android:gravity="top"
        android:orientation="horizontal"
        android:background="@color/bg_appbar_color"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:divider="@color/colorBlack"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:layout_weight="0.12"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:tint="@color/appbar_actionicon_color"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="TODO" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.73"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/searchbackground"
                    android:focusable="false"
                    android:fontFamily="@font/roboto_regular"
                    android:drawableStart="@drawable/ic_search_icon_colored"
                    android:hint="Search Broker"
                    android:nextFocusForward="@id/et_password"
                    android:inputType="text" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:layout_alignEnd="@+id/et_search"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/searchiconbackground"
                    android:src="@drawable/ic_search_icon"
                    android:tint="@color/colorWhite" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.15"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorBlue"
                android:src="@drawable/ic_user_icon_colored"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginBottom="5dp"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="BROKERS"
                android:layout_alignParentStart="true"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_viewall"
                android:text="@string/view_all"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorLightBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/toprecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:layout_marginTop="5dp"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <TextView
        android:text="RECENT"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorBlack"
        android:background="@color/searchbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>