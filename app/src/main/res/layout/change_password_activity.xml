<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="brokerscirlce.com.Activities.ChangePassword.ChangePasswordActivity">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1.0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_gravity="top"
            android:layout_weight="0.55"
            android:background="@mipmap/create_background"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <View
                android:background="@color/colorBlueWithOpacity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:weightSum="1.0"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:divider="@color/colorBlack"
                    android:layout_height="40dp">

                    <LinearLayout
                        android:id="@+id/btn_back"
                        android:layout_weight="0.15"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_back_black_24dp"
                            android:tint="@color/colorWhite"
                            android:layout_width="30dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.6"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Password"
                            android:fontFamily="@font/roboto_regular"
                            android:letterSpacing="0.08"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.25"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btn_chat"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitCenter"
                            android:tint="@color/colorWhite"
                            android:src="@drawable/ic_chat_icon"/>

                        <RelativeLayout
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/btn_profile"
                                android:layout_centerInParent="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:scaleType="fitCenter"
                                android:tint="@color/colorWhite"
                                app:riv_corner_radius="5dp"
                                app:riv_border_width="1dp"
                                app:riv_border_color="@color/colorWhite"
                                android:src="@drawable/ic_user_icon_white"/>

                            <ImageView
                                android:id="@+id/user_online_icon"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:padding="0dp"
                                android:src="@drawable/greendot_icon"
                                android:layout_width="15dp"
                                android:layout_height="15dp"/>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginBottom="30dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:tint="@color/colorWhite"
                        android:src="@drawable/ic_password_icon"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change your password?"
                            android:fontFamily="@font/roboto_regular"
                            android:letterSpacing="0.08"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="220dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Enter your old and new passowrd"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.08"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                    <RelativeLayout
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp">

                        <EditText
                            android:id="@+id/et_old_password"
                            android:background="@drawable/round_blue_border"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingEnd="40dp"
                            android:paddingStart="40dp"
                            android:textSize="@dimen/textsizedefault"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Old Password"
                            android:inputType="textPassword" />

                        <ImageView
                            android:layout_width="@dimen/textfieldiconsize"
                            android:layout_height="@dimen/textfieldiconsize"
                            android:tint="@color/colorWhite"
                            android:src="@drawable/ic_password_icon"
                            android:layout_marginStart="3dp"
                            android:background="@drawable/circleblue"
                            android:layout_centerVertical="true"/>

                        <ToggleButton
                            android:id="@+id/toggle_old_password"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_width="@dimen/erroriconsize"
                            android:layout_height="@dimen/erroriconsize"
                            android:background="@drawable/sms_selector"
                            android:checked="false"
                            android:text=""
                            android:textOff=""
                            android:textOn=""/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.45"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <EditText
                    android:id="@+id/et_new_password"
                    android:background="@drawable/round_blue_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:textSize="@dimen/textsizedefault"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="New Password"
                    android:inputType="textPassword" />

                <ImageView
                    android:layout_width="@dimen/textfieldiconsize"
                    android:layout_height="@dimen/textfieldiconsize"
                    android:tint="@color/colorWhite"
                    android:src="@drawable/ic_password_icon"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/circleblue"
                    android:layout_centerVertical="true"/>

                <ToggleButton
                    android:id="@+id/toggle_new_password"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_width="@dimen/erroriconsize"
                    android:layout_height="@dimen/erroriconsize"
                    android:background="@drawable/sms_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn=""/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <EditText
                    android:id="@+id/et_retypepassword"
                    android:background="@drawable/round_blue_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:textSize="@dimen/textsizedefault"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Retype new password"
                    android:inputType="textPassword" />

                <ImageView
                    android:layout_width="@dimen/textfieldiconsize"
                    android:layout_height="@dimen/textfieldiconsize"
                    android:tint="@color/colorWhite"
                    android:src="@drawable/ic_password_icon"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/circleblue"
                    android:layout_centerVertical="true"/>

                <ToggleButton
                    android:id="@+id/toggle_retypepassword"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_width="@dimen/erroriconsize"
                    android:layout_height="@dimen/erroriconsize"
                    android:background="@drawable/sms_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn=""/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:id="@+id/btn_next"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_blue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonheight">

                <TextView
                    android:layout_centerInParent="true"
                    android:text="Next"
                    android:textStyle="bold"
                    android:textSize="@dimen/buttontextsizedefault"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/buttoniconsize"
                    android:layout_height="@dimen/buttoniconsize"
                    android:src="@drawable/ic_arrow_forward"
                    android:background="@drawable/circlegreen"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <!-- Copyright Layout -->
            <LinearLayout
                android:id="@+id/copyright"
                android:layout_marginTop="30dp"
                android:layout_gravity="bottom|center"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include layout="@layout/copyright_layout"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/internet_connection_layout"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>